@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ASP.NET Prasad</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="card-columns">
@foreach (var player in Model.Players)
{
    <div class="card"> 
	    <div class="card-body"><h5 class="card-title">@player.Name</h5></div>
            <div class="card-img"><h5>@player.Role</h5></div>
            <div class="card-text">@player.Description</div>
            <div class="card-text"><h2>@player.Country</h2></div>
    </div>
}
</div>